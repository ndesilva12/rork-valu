rules_version = '2';

// Firestore Security Rules for Stand App
// Note: This app uses Clerk for authentication, not Firebase Auth
//
// SECURITY NOTE: Since we use Clerk (not Firebase Auth), we can't validate
// user identity in Firestore rules. The admin panel has email-based access
// control on the client side. For production, consider:
// 1. Using Firebase Admin SDK on backend for admin operations
// 2. Implementing Clerk token validation in rules
// 3. Using Firebase Custom Auth with Clerk tokens

service cloud.firestore {
  match /databases/{database}/documents {

    // Brands collection - PUBLIC READ, OPEN WRITE
    // Anyone can read the reference data
    // Writes are controlled by admin panel's email whitelist
    match /brands/{brandId} {
      allow read: if true;   // Public read access
      allow write: if true;  // Open write (admin panel controls access)
    }

    // Values collection - PUBLIC READ, OPEN WRITE
    // Anyone can read the reference data
    // Writes are controlled by admin panel's email whitelist
    match /values/{valueId} {
      allow read: if true;   // Public read access
      allow write: if true;  // Open write (admin panel controls access)
    }

    // Users collection - OPEN ACCESS
    // Users can read and write (Clerk handles authentication)
    match /users/{userId} {
      allow read, write: if true;
    }

    // Transactions collection - OPEN ACCESS
    // Merchants create transactions, customers and merchants can read
    match /transactions/{transactionId} {
      allow read, write: if true;
    }

    // Payments collection - OPEN ACCESS
    // Admin records payments from businesses
    match /payments/{paymentId} {
      allow read, write: if true;
    }

    // User Lists collection - OPEN ACCESS
    // TODO: Integrate Clerk with Firebase Custom Auth for proper user validation
    // For now, allow all read/write access (Clerk handles authentication on client)
    match /userLists/{listId} {
      allow read, write: if true;
    }

    // Business Team Members collection - OPEN ACCESS
    // Business owners can manage their team members (Clerk handles authentication)
    match /businessTeamMembers/{memberId} {
      allow read, write: if true;
    }

    // Follows collection - OPEN ACCESS
    // Users can follow brands, businesses, and other users (Clerk handles authentication)
    match /follows/{followId} {
      allow read, write: if true;
    }

    // Posts collection - OPEN ACCESS
    // Users can create, read, and delete their own posts (Clerk handles authentication)
    match /posts/{postId} {
      allow read, write: if true;
    }

    // Post Likes collection - OPEN ACCESS
    // Users can like/unlike posts (Clerk handles authentication)
    match /postLikes/{likeId} {
      allow read, write: if true;
    }

    // Post Comments collection - OPEN ACCESS
    // Users can comment on posts (Clerk handles authentication)
    match /postComments/{commentId} {
      allow read, write: if true;
    }

    // Reviews collection - OPEN ACCESS
    // Users can review brands and businesses (Clerk handles authentication)
    match /reviews/{reviewId} {
      allow read, write: if true;
    }

    // Review Likes collection - OPEN ACCESS
    // Users can like/unlike reviews (Clerk handles authentication)
    match /reviewLikes/{likeId} {
      allow read, write: if true;
    }

    // Business Claims collection - OPEN ACCESS
    // Users can submit business ownership claims (Clerk handles authentication)
    match /businessClaims/{claimId} {
      allow read, write: if true;
    }

    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
